form(ng-submit='signUp.submit()' name='signUpForm')
  label(for='name').label.t-label  Name
  input.input(name='name' type='text' ng-model='signUp.name' required='')
  div(ng-messages="signUp.name.$error")
    p(ng-message="required").t-paragraph Please enter a name!

  label(for='email').label.t-label  E-mail
  input.input(name='email' type='text' ng-model='signUp.email' required='')
  div(ng-messages="signUp.email.$error")
    p(ng-message="required").t-paragraph Please enter an E-mail!

  label(for='password').label.t-label  Password
  input.input(name='password' type='password' ng-model='signUp.password' required='')
  div(ng-messages="signUp.password.$error")
    p(ng-message="required").t-paragraph Please enter a Password!

  label(for='password-repeated').label.t-label  Confirm Password
  input.input(name='password-repeated' type='password' ng-model='signUp.passwordRepeated' required='')
  div(ng-messages="signUp.passwordRepeated.$error")
    p(ng-message="required").t-paragraph Please confirm your Password!

button.button(type='submit' ng-disabled='signUpForm.$invalid') Submit
a.button(ui-sref='main.home') Cancel

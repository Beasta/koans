form(ng-submit='signUp.submit()' name='signUpForm')
  label(for='name').label.t-label  Name
  input.input(id='name' name='name' type='text' ng-model='signUp.name' required='')
  div(ng-messages="signUpForm.name.$error")
    p(ng-message="required").t-paragraph Please enter a name!

  label(for='email').label.t-label  E-mail
  input.input(id='email' name='email' type='email' ng-model='signUp.email' required='' validate-email='')
  div(ng-messages="signUpForm.email.$error")
    p(ng-message="required").t-paragraph Please enter an E-mail!
    p(ng-message="email").t-paragraph Please enter a valid E-mail!

  label(for='password').label.t-label  Password
  input.input(id='password' name='password' type='password' ng-model='signUp.password' ng-minlength='6' ng-pattern="/(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z])/" required='')
  div(ng-messages="signUpForm.password.$error")
    p(ng-message="required").t-paragraph Please enter a Password!
    p(ng-message="minlength").t-paragraph Your password should have at least 6 characters!
    p(ng-message="pattern").t-paragraph Must contain one lower &amp; uppercase letter, and one non-alpha character (a number or a symbol.)

  label(for='passwordRepeated').label.t-label  Confirm Password
  input.input(id='passwordRepeated' name='passwordRepeated' type='password' ng-model='signUp.passwordRepeated' required='' same-as='password')
  div(ng-messages="signUpForm.passwordRepeated.$error")
    p(ng-message="required").t-paragraph Please confirm your Password!
    p(ng-message="same-as").t-paragraph Passwords do not match.

button.button(type='submit' ng-disabled='signUpForm.$invalid') Submit
a.button(ui-sref='main.home') Cancel

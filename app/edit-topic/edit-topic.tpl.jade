form(ng-submit='editTopic.submit()')
  label(for='language') Language
  select(name='language' ng-model="editTopic.language")
    option(value='typescript')
      | Typescript
    option(value='javascript')
      | Javascript

  label(for='title') Title
  input(name='title' ng-model='editTopic.title')

  ul
    li(ng-repeat='item in editTopic.items')
      label(for='description') Description
      textarea(name='description')
      code-editor(
      language='editTopic.language',
      libs-loader='editTopic.libsLoader',
      ng-model='item.exercise'
      )
      code-editor(
      language='editTopic.language',
      libs-loader='editTopic.libsLoader'
      )
      button(name='delete' ng-click='editTopic.removeExercise($index)' ng-show='editTopic.items.length>1') Delete
  button(name='add' ng-click='editTopic.addExercise()') Add
  button(type='submit') Submit
  a(ui-sref='home') Cancel


form(ng-submit='editTopic.submit()')
  label(for='language') Language
  select(name='language' ng-model="editTopic.topic.language")
    option(value='typescript')
      | Typescript
    option(value='javascript')
      | Javascript

  label(for='title') Title
  input(name='title' ng-model='editTopic.topic.title')

  ul
    li(ng-repeat='item in editTopic.topic.items')
      label(for='title') Title
      input(name='title' ng-model='item.title')
      label(for='description') Description
      textarea(name='description' ng-model='item.description')
      code-editor(
      language='editTopic.topic.language',
      libs-loader='editTopic.libsLoader',
      ng-model='item.exercise'
      )
      code-editor(
      language='editTopic.topic.language',
      libs-loader='editTopic.libsLoader',
      ng-model='item.solution'
      )
      button(name='delete' ng-click='editTopic.removeExercise($index)' ng-show='editTopic.topic.items.length>1') Delete
  button(name='add' ng-click='editTopic.addExercise()') Add
  button(type='submit') Submit
  a(ui-sref='home') Cancel

